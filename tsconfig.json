{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "es2015",
    "target": "es2019",
    "jsx": "react",
    "strict": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "types": ["@pyoner/svelte-types"],
    "outDir": "lib"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}